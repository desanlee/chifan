		<%= image_tag "pilot_pics/table.png", id: "table" %>
		<%= image_tag "pilot_pics/chair.png", id: "chair" %>
		<%= image_tag "pilot_pics/tablelamp.png", id: "tablelamp" %>
		<%= image_tag "pilot_pics/droplight.png", id: "droplight" %>
		
	</div>	
